                       scd ==0.1.*,
                       system-filepath,
                       bytestring ==0.10.*,
                       text ==1.2.*,
                       aeson >=0.7,
                       aeson-pretty ==0.7.*,
                       directory ==1.2.*,
                       utf8-string
  hs-source-dirs:      src
  ghc-options:         -Wall
  default-language:    Haskell2010
